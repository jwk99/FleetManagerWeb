@page
@model FleetManagerWeb.Pages.ServiceRecords.EditModel
@{
    ViewData["Title"] = "Edytuj serwis";
}
<h1>Edytuj wpis</h1>

@if (!ViewContext.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <strong>Błędy ModelState:</strong>
        <ul>
            @foreach (var kv in ViewContext.ModelState)
            {
                foreach (var err in kv.Value.Errors)
                {
                    <li>@kv.Key — @err.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}
<form method="post">
    <input type="hidden" asp-for="Record.Id" />

    <div class="mb-3">
        <label>Pojazd</label>
        <select class="form-control" asp-for="Record.VehicleId" asp-items="Model.Vehicles"></select>
    </div>

    <div class="mb-3">
        <label>Kierowca</label>
        <select class="form-control" asp-for="Record.DriverId" asp-items="Model.Drivers"></select>
    </div>

    <div class="mb-3">
        <label>Data</label>
        <input type="date" class="form-control" asp-for="Record.Date" />
    </div>

    <div class="mb-3">
        <label>Opis</label>
        <textarea class="form-control" asp-for="Record.Description"></textarea>
    </div>

    <div class="mb-3">
        <label>Koszt</label>
        <input class="form-control" asp-for="Record.Cost" />
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" asp-for="Record.IsCompleted" />
        <label class="form-check-label">Serwis wykonany</label>
    </div>

    <div class="mb-3">
        <label>Data wykonania</label>
        <input class="form-control" type="date" asp-for="Record.CompletedDate" />
    </div>

    <button class="btn btn-success">Zapisz</button>
    <a class="btn btn-secondary" asp-page="Index">Wróć</a>
</form>
